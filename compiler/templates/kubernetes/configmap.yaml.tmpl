apiVersion: v1
kind: ConfigMap
metadata:
  name: {{agent_id}}-config
  labels:
    app: {{agent_id}}
    workflow: {{workflow_name}}
    kumeo.io/type: agent-config
data:
  agent-config.json: |
    {
      "agent_id": "{{agent_id}}",
      "workflow_name": "{{workflow_name}}",
      "config": {{config_json}}
    }
