apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{agent_id}}-{{workflow_name}}
  labels:
    app: {{agent_id}}
    workflow: {{workflow_name}}
    kumeo.io/agent-type: {{agent_type}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{agent_id}}
      workflow: {{workflow_name}}
  template:
    metadata:
      labels:
        app: {{agent_id}}
        workflow: {{workflow_name}}
        kumeo.io/agent-type: {{agent_type}}
    spec:
      containers:
      - name: {{agent_id}}
        image: kumeo/{{language}}-agent:latest
        imagePullPolicy: IfNotPresent
        env:
        - name: AGENT_ID
          value: "{{agent_id}}"
        - name: WORKFLOW_NAME
          value: "{{workflow_name}}"
        - name: NATS_URL
          value: "nats://nats.kumeo-system.svc.cluster.local:4222"
        - name: CONFIG_PATH
          value: "/etc/kumeo/config/agent-config.json"
        volumeMounts:
        - name: config-volume
          mountPath: /etc/kumeo/config
        resources:
          limits:
            cpu: "500m"
            memory: "512Mi"
          requests:
            cpu: "100m"
            memory: "128Mi"
        livenessProbe:
          httpGet:
            path: /healthz
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /readyz
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 5
      volumes:
      - name: config-volume
        configMap:
          name: {{agent_id}}-config
