[package]
name = "{{project_name | default(value="kumeo-agent") }}"
version = "0.1.0"
edition = "2021"
description = "Kumeo Agent - Generated from Kumeo DSL"
authors = ["Kumeo Team"]

[dependencies]
# Protos generados para comunicación con el runtime
kumeo-protos = { version = "0.1", path = "../protos" }

# Dependencias generales
tokio = { version = "1.0", features = ["full", "rt-multi-thread"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
anyhow = "1.0"
thiserror = "1.0"
async-trait = "0.1"
uuid = { version = "1.0", features = ["v4", "serde"] }

# gRPC y Protocol Buffers
tonic = { version = "0.8", features = ["tls"] }
prost = "0.11"
tokio-stream = { version = "0.1", features = ["net"] }
tokio-util = { version = "0.7", features = ["codec", "io-util"] }
tower = "0.4"
futures = "0.3"
bytes = "1.0"

# Para conexión Unix
mio = { version = "0.8", features = ["os-ext", "os-poll"] }

{% if agents is containing("LLM") -%}
# Dependencies for LLM agent
ollama-rs = "0.1"
{% endif -%}

{% if agents is containing("Router") -%}
# Dependencies for Router agent
regex = "1.0"
{% endif -%}

[dev-dependencies]
tempfile = "3.0"

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
